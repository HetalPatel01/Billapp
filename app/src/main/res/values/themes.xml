<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Billapp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/primaryDark</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Theme.Billapp" parent="Base.Theme.Billapp" />

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:drawablePadding">3dp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">13sp</item>
        <item name="android:drawablePadding">3dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/white_round_bg</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:gravity">center</item>
    </style>
</resources>