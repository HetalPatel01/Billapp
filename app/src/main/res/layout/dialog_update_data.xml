<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_closee"
        android:text="Update data"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edtDetail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="8dp"
        android:background="@drawable/white_round_bg_stroke"
        android:hint="Details"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="@dimen/_8sdp" />

    <EditText
        android:id="@+id/edtQty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="8dp"
        android:background="@drawable/white_round_bg_stroke"
        android:hint="Quantity"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:paddingLeft="@dimen/_8sdp" />

    <EditText
        android:id="@+id/edtRate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/white_round_bg_stroke"
        android:hint="Rate"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:paddingLeft="@dimen/_8sdp" />

    <TextView
        android:id="@+id/tvTotalU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Total: 20.00"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/gray_round_bg"
            android:text="DELETE" />

        <TextView
            android:id="@+id/btnUpdate"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/yellow_round_bg"
            android:text="UPDATE" />
    </LinearLayout>


</LinearLayout>
